<?xml version="1.0" encoding="utf-8" ?>
<hibernate-configuration
                         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                         xsi:schemaLocation="http://www.hibernate.org/xsd/orm/cfg ">
    <session-factory>
        <property name="connection.driver.class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/casino</property>
        <property name="connection.username">root</property>
        <property name="connection.password">admin</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="show_sql">true</property>
        <mapping class="org.example.entity.Juegos"></mapping>
        <mapping class="org.example.entity.Usuarios"></mapping>
        <mapping class="org.example.entity.Mesas"></mapping>
        <mapping class="org.example.entity.JuegosMesas"></mapping>

    </session-factory>
</hibernate-configuration>